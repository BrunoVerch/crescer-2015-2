<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Locadora - @ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Content/themes/base")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Locadora CWI Crescer", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })                
            </div>
            <div class="pull-right inline navbar-brand">
                <form action="@Url.Action("JogosDisponiveis", "Relatorio")" method="get">
                    <input type="text" placeholder="Nome" id="pesquisaNome" name="nomeJogo">
                    <button class="btn btn-default btn-sm" type="submit" id="btn-pesquisa">Pesquisar</button>
                </form>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">                    
                </ul>
                
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <div id="fb-root"></div>
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - CWI Crescer</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("Scripts", false)
    <script>
        (function(d, s, id) {
          var js, fjs = d.getElementsByTagName(s)[0];
          if (d.getElementById(id)) return;
          js = d.createElement(s); js.id = id;
          js.src = "//connect.facebook.net/pt_BR/sdk.js#xfbml=1&version=v2.5";
          fjs.parentNode.insertBefore(js, fjs);
        }(document, 'script', 'facebook-jssdk'));

        $("#pesquisaNome").autocomplete({
            source: 'http://localhost:56771/Relatorio/JogosAutocomplete'
        });
    
    </script>
</body>
</html>