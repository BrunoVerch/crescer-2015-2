@model RelatorioModel
@{
    ViewBag.Title = "Jogos Disponíveis";
}

<h2>Jogos disponíveis para locação</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Jogo</th>            
            <th>Categoria</th>
            <th>Preço</th>
            <th>Detalhes</th>
        </tr>
    </thead>
    @foreach (var jogo in @Model.Jogos)
    {
        <tr>
            <td>@jogo.Nome</td>            
            <td>@jogo.Categoria</td>
            <td>@jogo.Preco.ToString("c")</td>
            <td>@Html.ActionLink("Detalhes","JogoDetalhes","Jogo", new { id = @jogo.Id },null)<td>
        </tr>
    }
</table>
<div>
    <p>Quantidade de jogos: @Model.QuantidadeDeJogos</p>
    <p>Valor médio dos jogo: @Model.ValorMedio</p>
    <p>Jogo mais barato: @Model.JogoMaisBarato</p>
    <p>Jogo mais caro: @Model.JogoMaisCaro</p>
</div>
