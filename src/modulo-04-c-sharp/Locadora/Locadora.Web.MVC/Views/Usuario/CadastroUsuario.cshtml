@model UsuarioModel


@{
    ViewBag.Title = "Cadastro";
}

<h2>Cadastro</h2>
@using (Html.BeginForm("Salvar", "Usuario", FormMethod.Post, new { @class = "form" }))
{
    @Html.ValidationSummary(true)
    @Html.AntiForgeryToken()

    <h4>@TempData["SenhaInvalida"]</h4>
    <div class="form-group">
        <label for="nomecompleto">Nome Completo:</label>
        @Html.TextBoxFor(m => m.NomeCompleto, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.NomeCompleto)
    </div>         

    <div class="form-group">
        <label for="email">Email:</label>
        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Email)
    </div>

    <div class="form-group">
        <label for="Senha">Senha:</label>
        <input type="password" class="form-control" name="Senha" value="" />
        @Html.ValidationMessageFor(m => m.Senha)
    </div>

    <div class="form-group">
        <label for="ConfirmarSenha">Confirmar senha:</label>
        <input type="password" class="form-control" name="ConfirmarSenha" value="" />
        @Html.ValidationMessageFor(m => m.ConfirmarSenha)
    </div>

    <input class="btn btn-default" type="submit" name="enviar" value="Salvar" />
}

@section Scripts {
    @Scripts.Render("~/bundles/jquery-validator")
}

